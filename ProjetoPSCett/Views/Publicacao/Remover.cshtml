@model Publicacao

@{
    ViewData["Title"] = "Remover";
}

<h1 class="mt-5 pt-4">Remover</h1>

<h3>Tem certeza que deseja remover essa publicação?</h3>

<div>
    <h4>Aluno</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Autor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Autor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Conteudo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Conteudo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataPublicacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataPublicacao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Esporte)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Esporte)
        </dd>
    </dl>

    <form asp-action="Remover">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="&#x1F5D1 Remover" class="btn btn-sm btn-danger" />
    </form>

    <div>
        <br />
        <a class="btn btn-sm btn-secondary" asp-action="Index">&#x21A9 Voltar para página inicial</a>
    </div>
</div>
