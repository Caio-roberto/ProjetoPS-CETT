<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="icon" type="image" href="https://upload.wikimedia.org/wikipedia/commons/thumb/1/19/UFG_logo.svg/1200px-UFG_logo.svg.png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjetoPSCett.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow fixed-top">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" 
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item border border-1 bg-info m-2">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Publicacao" asp-action="Index">Pagina inicial</a>
                        </li>
                        <li class="nav-item border border-1 bg-warning m-2">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Publicacao" asp-action="Basquete">Basquete</a>
                        </li>
                        <li class="nav-item border border-1 bg-success m-2">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Publicacao" asp-action="Futebol">Futebol</a>
                        </li>
                        <li class="nav-item border border-1 bg-muted m-2">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Publicacao" asp-action="Volei">Volei</a>
                        </li>
                        <li class="nav-item border border-1 m-2">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Publicacao" asp-action="Adicionar">Adicionar nova publicação</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto py-3">
        <div class="bg-white container-fluid text-center fixed-bottom border-top">
            <span class="text-muted">
                &copy; 2022 - Escolar Manager - All Rights Reserved
            </span>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
